{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~/components/*": [
        "./src/components/*",
        "./src/components/*/index.tsx",
        "./src/components/*/index.jsx"
      ]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "moduleResolution": "Node16"
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
